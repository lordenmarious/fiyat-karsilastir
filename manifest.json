{
  "manifest_version": 3,
  "name": "Fiyat Karşılaştır",
  "version": "2.2",
  "description": "Compare prices from Amazon, Trendyol, and more instantly",
  "browser_specific_settings": {
    "gecko": {
      "id": "hover-price@extension.local",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.com.tr/*",
    "*://*.trendyol.com/*",
    "*://*.hepsiburada.com/*",
    "*://*.akakce.com/*",
    "*://*.itopya.com/*",
    "*://*.vatanbilgisayar.com/*",
    "*://*.teknosa.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com.tr/*",
        "*://www.trendyol.com/*",
        "*://www.hepsiburada.com/*",
        "*://*.itopya.com/*",
        "*://*.vatanbilgisayar.com/*",
        "*://*.teknosa.com/*"
      ],
      "js": [
        "utils.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Favoriler"
  },
  "commands": {
    "open-comparison": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Open price comparison"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}